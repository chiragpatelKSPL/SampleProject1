<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/fullscreenBackgroundColor"
    android:padding="10dp"
    android:theme="@style/ThemeOverlay.DemoApp.FullscreenContainer"
    tools:context=".view.activities.MessageListActivity">


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_dummy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/bg_topbar"
        app:layout_constraintTop_toTopOf="parent"
        android:adjustViewBounds="true"
        app:layout_constraintBottom_toTopOf="@+id/rv_chat_messages"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_chat_messages"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/iv_dummy"
        app:layout_constraintBottom_toTopOf="@+id/cl_enter_message_panel"
        android:layout_marginTop="10dp"
        tools:listitem="@layout/layout_message_friend_chat_item"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:layout_marginBottom="10dp"
        tools:itemCount="10"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_enter_message_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="15dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_send_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:srcCompat="@drawable/ic_send_message"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rect_lightgreen"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/iv_send_message"
            android:layout_marginBottom="15dp"
            app:srcCompat="@drawable/ic_camera"
            android:padding="8dp"/>

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/edt_message"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/iv_camera"
            app:layout_constraintBottom_toBottomOf="@+id/iv_send_message"
            app:layout_constraintEnd_toStartOf="@+id/iv_send_message"
            android:background="@drawable/bg_search"
            android:layout_marginEnd="15dp"
            android:hint="@string/hint_enter_your_message"
            android:textColor="@color/white"
            android:padding="15dp"
            android:textSize="14sp"
            android:textColorHint="@color/white"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
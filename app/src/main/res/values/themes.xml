<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.DemoApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/grey_dark</item>
        <item name="colorPrimaryVariant">@color/grey_dark</item>
        <item name="colorOnPrimary">@color/grey_dark</item>
        <item name="colorSecondary">@color/grey_light</item>
        <item name="colorSecondaryVariant">@color/grey_light</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.DemoApp.Fullscreen" parent="Theme.DemoApp">
        <item name="android:actionBarStyle">@style/Widget.Theme.DemoApp.ActionBar.Fullscreen</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.DemoApp.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/grey_dark</item>
        <item name="fullscreenTextColor">@color/grey_light</item>
    </style>
</resources>